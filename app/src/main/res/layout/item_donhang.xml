<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#ffffff"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <TextView android:id="@+id/tvTenKhachHang" android:textStyle="bold" android:textSize="16sp"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

    <TextView android:id="@+id/tvSanPham" android:layout_width="match_parent" android:layout_height="wrap_content" />

    <TextView android:id="@+id/tvTongTien" android:layout_width="match_parent" android:layout_height="wrap_content" />

    <TextView android:id="@+id/tvNgayDat" android:layout_width="match_parent" android:layout_height="wrap_content" />

    <TextView android:id="@+id/tvTrangThai" android:textColor="#FF9800"
        android:layout_width="match_parent" android:layout_height="wrap_content" />
</LinearLayout>
