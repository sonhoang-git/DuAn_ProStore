<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:padding="12dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#CCC"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:clipToPadding="false">

        <TextView
            android:text="Thời gian:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#eee"
            android:padding="4dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:layout_gravity="start"
            android:clipToPadding="false"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/btnPrev"
                android:text="‹"
                android:textSize="20sp"
                android:textColor="#333"
                android:padding="4dp"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:id="@+id/tvDateRange"
                android:text="10/7 - 26/7"
                android:textSize="16sp"
                android:textColor="#111"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <TextView
                android:id="@+id/btnNext"
                android:text="›"
                android:textSize="20sp"
                android:textColor="#333"
                android:padding="4dp"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFF"
                android:padding="12dp"
                android:layout_marginEnd="6dp"
                android:elevation="4dp">

                <TextView
                    android:text="Doanh thu:"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvRevenue"
                    android:text="8.200.000 VND"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#B00020"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFF"
                android:padding="12dp"
                android:layout_marginStart="6dp"
                android:elevation="4dp">

                <TextView
                    android:text="Số lượng đơn:"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvOrderCount"
                    android:text="1000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#444"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:text="Sản phẩm bán chạy"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#FFF"
            android:elevation="4dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_kids2"
                android:scaleType="centerCrop"
                android:background="#EEE"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="Áo thun nam"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Số lượng bán: 120"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Giá: 199.000 VND"
                    android:textSize="14sp"
                    android:textColor="#B00020"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#FFF"
            android:elevation="4dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_kids1"
                android:scaleType="centerCrop"
                android:background="#EEE"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="Quần jeans nữ"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Số lượng bán: 95"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Giá: 299.000 VND"
                    android:textSize="14sp"
                    android:textColor="#B00020"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
